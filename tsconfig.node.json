{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/core/**/*"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@db/*": ["src/db/*"],
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@stores/*": ["src/core/stores/*"],
    }
  }
}
