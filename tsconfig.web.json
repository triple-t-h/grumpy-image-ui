{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/**/*.ts",
    "src/renderer/**/*.d.ts",
    "src/preload/*.d.ts",
    "src/core/**/*.ts",
    "src/db/**/*.ts",
    "vite-env.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@db/*": ["src/db/*"],
      "@renderer/*": ["src/renderer/*"],
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@stores/*": ["src/core/stores/*"],
      "@renderer-stores/*": ["src/renderer/stores/*"],
      "@components/*": ["src/renderer/ui/componets/*"],
      "@ui/*": ["src/renderer/ui/*"]
    }
  }
}
